            }

            .career-grid {
                grid-template-columns: 1fr;
            }

            .skills-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .roadmap-item {
                flex-direction: column;
                text-align: center;
            }

            .roadmap-number {
                margin: 0 auto 1rem;
            }

            .cta-buttons {
                flex-direction: column;
                align-items: center;
            }

            .footer-links {
                flex-direction: column;
                gap: 1rem;
            }
        }

        @media (max-width: 480px) {
            .hero-stats {
                grid-template-columns: 1fr;
            }

            .skills-grid {
                grid-template-columns: 1fr;
            }

            .section {
                padding: 3rem 0;
            }

            .cta-section {
                padding: 2rem 1rem;
            }
        }
    </style>
</head>
