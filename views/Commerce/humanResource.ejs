            .roadmap-item {
                flex-direction: column;
                text-align: center;
            }

            .roadmap-number {
                margin: 0 auto 1rem;
            }

            .footer-links {
                flex-direction: column;
                gap: 1rem;
            }
        }

        @media (max-width: 480px) {
            .hero-stats {
                grid-template-columns: 1fr;
            }

            .skills-grid {
                grid-template-columns: 1fr;
            }

            .section {
                padding: 3rem 0;
            }
        }
    </style>
