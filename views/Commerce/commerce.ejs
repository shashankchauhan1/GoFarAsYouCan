            background: #16213e;
            padding: 50px 20px;
            animation: fadeIn 1.5s ease-in-out;
        }

        .faq-section h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f39c12;
            animation: slideInRight 1s ease-in-out;
        }

        .faq-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .faq-item {
            background: #1a1a2e;
            margin-bottom: 15px;
            border-radius: 8px;
            overflow: hidden;
            animation: fadeInUp 1s ease-in-out;
        }

        .faq-question {
            padding: 15px 20px;
            cursor: pointer;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: background-color 0.3s;
        }

        .faq-question:hover {
            background-color: #2c3e50;
        }

        .faq-answer {
            padding: 0 20px;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out, padding 0.3s ease;
        }

        .faq-item.active .faq-answer {
            padding: 15px 20px;
            max-height: 500px;
        }

        .faq-toggle {
            color: #f39c12;
            font-size: 1.2rem;
        }

        /* Footer */
        footer {
            text-align: center;
            padding: 20px;
            background: #16213e;
            color: white;
            margin-top: 40px;
            animation: fadeInUp 1s ease-in-out;
