    <!-- Essential Skills Section -->
    <section class="section bg-dark" id="skills">
        <div class="container">
            <h2 class="section-title">Essential Skills & Tools</h2>
            <p class="section-intro">To excel in Biochemical Engineering, you'll need a blend of technical expertise, software proficiency, and professional skills:</p>
            
            <div class="cards-grid three-columns">
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-book-open"></i> Technical Knowledge</h3>
                    </div>
                    <div class="card-content">
                        <ul class="skills-list">
                            <li>
                                <span class="skill-name">Biochemistry</span>
                                <p class="skill-desc">Protein structure, metabolism</p>
                            </li>
                            <li>
                                <span class="skill-name">Microbiology</span>
                                <p class="skill-desc">Microbial growth, sterilization</p>
                            </li>
                            <li>
                                <span class="skill-name">Bioprocess Design</span>
                                <p class="skill-desc">Reactor design, scale-up</p>
                            </li>
