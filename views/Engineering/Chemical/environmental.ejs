    <!-- Essential Skills Section -->
    <section class="section bg-dark" id="skills">
        <div class="container">
            <h2 class="section-title">Essential Skills & Tools</h2>
            <p class="section-intro">To succeed in Environmental Engineering, you need technical expertise, software proficiency, and professional skills:</p>
            
            <div class="cards-grid three-columns">
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-book-open"></i> Technical Knowledge</h3>
                    </div>
                    <div class="card-content">
                        <ul class="skills-list">
                            <li>
                                <span class="skill-name">Fluid Mechanics</span>
                                <p class="skill-desc">Water flow, hydraulics</p>
                            </li>
                            <li>
                                <span class="skill-name">Chemistry</span>
                                <p class="skill-desc">Water quality, treatment processes</p>
                            </li>
                            <li>
                                <span class="skill-name">Microbiology</span>
                                <p class="skill-desc">Biological treatment, pathogens</p>
                            </li>
                            <li>
