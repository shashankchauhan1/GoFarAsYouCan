        .footer {
            background-color: var(--dark-bg);
            color: var(--light-text);
            padding: 4rem 0 1rem;
        }

        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2.5rem;
            margin-bottom: 2.5rem;
        }

        .footer-logo h2 {
            margin-bottom: 1rem;
        }

        .footer-links h3,
        .footer-resources h3 {
            margin-bottom: 1.25rem;
            position: relative;
            padding-bottom: 0.5rem;
            display: inline-block;
        }

        .footer-links h3::after,
        .footer-resources h3::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background-color: var(--accent-light);
        }

        .footer-links ul,
        .footer-resources ul {
            list-style-type: none;
        }

        .footer-links li,
        .footer-resources li {
            margin-bottom: 0.5rem;
        }

        .footer-links a,
        .footer-resources a {
            color: var(--dark-text);
        }

        .footer-links a:hover,
        .footer-resources a:hover {
            color: var(--accent-light);
        }

        .footer-bottom {
            text-align: center;
            padding-top: 1.25rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .content-wrapper {
                flex-direction: column;
            }

            .hero h1 {
                font-size: 2.5rem;
            }

            .two-columns {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .section {
                padding: 3.5rem 0;
            }

            .hero {
                padding: 5rem 0;
            }

            .hero h1 {
                font-size: 2rem;
            }

            .section-title {
                font-size: 1.75rem;
            }
        }

        @media (max-width: 576px) {
            .navbar {
                padding: 0.75rem 0;
            }

            .logo {
                font-size: 1.2rem;
            }

            .hero h1 {
                font-size: 1.8rem;
            }

            .section-title {
                font-size: 1.5rem;
            }

            .tools-grid {
                grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
            }
        }
    </style>
</head>
