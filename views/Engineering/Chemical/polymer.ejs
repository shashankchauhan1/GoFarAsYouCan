            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: var(--light-text);
            text-align: center;
            padding: 6rem 0;
            position: relative;
        }

        .hero .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0.2;
            mix-blend-mode: overlay;
        }

        .hero h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .hero p {
            font-size: 1.2rem;
            max-width: 700px;
            margin: 0 auto;
        }

        /* Section Styles */
        .section {
            padding: 5rem 0;
        }

        .section-title {
            text-align: center;
            margin-bottom: 3rem;
            color: var(--accent-light);
            position: relative;
            font-size: 2rem;
        }

        .section-title::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background-color: var(--accent-light);
            border-radius: 2px;
        }

        .section-intro {
            text-align: center;
            max-width: 800px;
            margin: 0 auto 2.5rem;
            font-size: 1.1rem;
        }

        /* Content Wrapper */
        .content-wrapper {
            display: flex;
            gap: 2.5rem;
            align-items: center;
        }

        .text-content {
            flex: 1;
        }

        .text-content p {
            margin-bottom: 1.25rem;
            font-size: 1.05rem;
        }

        .image-content {
            flex: 1;
            box-shadow: var(--box-shadow);
            border-radius: var(--border-radius);
            overflow: hidden;
        }

        /* Cards Grid */
        .cards-grid {
            display: grid;
            gap: 1.5rem;
        }

        .two-columns {
            grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
        }

        .three-columns {
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        }

        .four-columns {
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        }

        /* Card Styles */
        .card {
            background-color: var(--card-bg);
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: var(--box-shadow);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .card:hover {
            border-color: var(--accent-light);
        }

        .card-header {
            padding: 1.25rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .card-header h3 {
            color: var(--accent-light);
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .card-header h3 i {
            color: var(--accent-color);
        }

        .card-header p {
            color: var(--dark-text);
            font-size: 0.9rem;
        }

        .card-content {
            padding: 1.25rem;
        }

        /* Project Cards */
        .project-card .card-image {
            height: 180px;
            overflow: hidden;
        }

        .project-card .card-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Career List */
        .career-list {
            list-style: none;
        }

        .career-list li {
            display: flex;
            justify-content: space-between;
            padding: 0.5rem 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .career-list li:last-child {
            border-bottom: none;
        }

        .badge {
            background-color: rgba(255, 255, 255, 0.15);
            color: var(--light-text);
            padding: 0.25rem 0.5rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .badge.top {
            background-color: var(--accent-color);
            color: var(--dark-bg);
        }

        .badge.program {
            background-color: var(--primary-light);
            color: var(--light-text);
        }

        /* Skills List */
        .skills-list {
            list-style: none;
        }

        .skills-list li {
            padding: 0.5rem 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .skills-list li:last-child {
            border-bottom: none;
        }

        .skill-name {
            font-weight: 600;
            display: block;
            margin-bottom: 0.25rem;
            color: var(--accent-light);
        }

        .skill-desc {
            font-size: 0.9rem;
            color: var(--dark-text);
        }

        /* Accordion */
        .accordion {
            border-radius: var(--border-radius);
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.1);
            background-color: var(--card-bg);
        }

        .accordion-item {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .accordion-item:last-child {
            border-bottom: none;
        }

        .accordion-header {
            padding: 1rem;
            cursor: pointer;
            font-weight: 600;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: var(--accent-light);
        }

        .accordion-header::after {
            content: '\f078';
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
        }

        .accordion-content {
            padding: 0 1rem;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }

        .accordion-content p {
            padding-bottom: 1rem;
        }

        .accordion-item.active .accordion-header {
            background-color: rgba(255, 255, 255, 0.05);
            color: var(--accent-color);
        }

        .accordion-item.active .accordion-content {
            max-height: 500px;
        }

        /* Course List */
        .course-list {
            list-style: none;
            margin-top: 1rem;
        }

        .course-item {
            background-color: rgba(255, 255, 255, 0.05);
            border-radius: var(--border-radius);
            padding: 1rem;
            margin-bottom: 1rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .course-item:hover {
            border-color: var(--accent-light);
        }

        .course-title {
            font-weight: 600;
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
            color: var(--accent-light);
        }

        .course-desc {
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .course-meta {
            display: flex;
            justify-content: space-between;
            font-size: 0.8rem;
            color: var(--dark-text);
        }

        /* Tools Grid */
        .tools-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
