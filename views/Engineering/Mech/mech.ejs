                  <i class="fas fa-industry"></i>
                  <h3>Manufacturing Engineering</h3>
              </a>
              <a href="thermal.ejs" class="specialization-card">
                  <i class="fas fa-temperature-high"></i>
                  <h3>Thermal Engineering</h3>
              </a>
              <a href="energy.ejs" class="specialization-card">
                  <i class="fas fa-solar-panel"></i>
                  <h3>Energy Systems</h3>
              </a>
          </div>
      </div>
  </section>

    <!-- Career Paths Section - NEW -->
    <section class="section bg-light" id="careers">
        <div class="container">
            <h2 class="section-title">Career Paths & Outlook</h2>
            
            <div class="cards-grid three-columns">
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-briefcase"></i> Industry Roles</h3>
                    </div>
                    <div class="card-content">
                        <ul class="career-list">
                            <li>
