    <!-- Real-world Projects Section -->
    <section class="section" id="projects">
        <div class="container">
            <h2 class="section-title">Real-world Projects</h2>
            <div class="cards-grid four-columns">

                <div class="card project-card">
                    <a href="https://en.wikipedia.org/wiki/Automotive_industry">
                      <div class="card-image">
                        <img src="https://images.unsplash.com/photo-1473621038790-b778b4750efe?ixlib=rb-1.2.1&auto=format&fit=crop&w=1352&q=80" alt="Automotive Engineering">
                    </div>
                    <div class="card-header">
                        <h3>Automotive Design</h3>
                    </div>
                    <div class="card-content">
                        <p>Designing and optimizing vehicle components, systems, and manufacturing processes.</p>
                    </div>
                    </a>
                </div>

                <div class="card project-card">
                  <a href="https://en.wikipedia.org/wiki/Robotics">
